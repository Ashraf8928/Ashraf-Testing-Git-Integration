{% for block in section.blocks %}
  <div class="px-5rem py-3 d-flex justify-content-between align-items-center">
    <h4>{{ block.settings.announcement__text }}</h4>
    <a href="">
      <h4>Announcement</h4>
    </a>
  </div>
{% endfor %}

{% schema %}
  {
    "name": "Announcement Bar",
    "max_blocks": 1,
    "class": "announcement-bar-section",
    "blocks": [
      {
        "type": "announcement",
        "name": "Add Your Announcment",
        "settings": [
          {
            "type": "text",
            "id": "announcement__text",
            "default": "Welcome to our store",
            "label": "You Announcement"
          }, {
            "type": "text",
            "id": "announcement__link__title",
            "label": "Give Your Own Title"
          }, {
            "type": "url",
            "id": "announcement__link",
            "label": "Your Title Redirect Link"
          }
        ]
      }
    ],
    "default": {
      "blocks": [
        {
          "type": "announcement"
        }
      ]
    }
  }
{% endschema %}